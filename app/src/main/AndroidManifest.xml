<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.claire.assignment2">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WelcomeActivity"
            android:configChanges="screenSize|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:configChanges="screenSize|keyboardHidden|orientation"
            android:label="@string/action_register"
            android:screenOrientation="portrait" />
        <activity android:name=".ItemInfoActivity" />
        <activity
            android:name=".Main2Activity"
            android:configChanges="screenSize|keyboardHidden|orientation"
            android:label="Main Types"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SubTypeActivity"
            android:configChanges="screenSize|keyboardHidden|orientation"
            android:label="Sub Types"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ItemActivity"
            android:configChanges="screenSize|keyboardHidden|orientation"
            android:label="Items"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShowItemInfoActivity"
            android:configChanges="screenSize|keyboardHidden|orientation"
            android:label="Item Information"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:configChanges="screenSize|keyboardHidden|orientation"
            android:label="Sign in for NO EXPIRATION"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RequestItemActivity"
            android:configChanges="screenSize|keyboardHidden|orientation"
            android:label="Requested Items"
            android:screenOrientation="portrait"/>
    </application>

</manifest>